<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.CategoryName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('your-background-image.jpg'); /* Replace with your background image */
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: 'Arial', sans-serif;
            color: #333;
        }

        .content-container {
            background: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
            padding: 30px;
            border-radius: 15px;
            margin: 50px auto;
            max-width: 1200px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 20px;
            text-align: center;
        }

        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: #fff;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            }

        .card-img-top {
            height: 500px; /* Even larger height for the image */
            width: 100%; /* Ensure the image takes the full width of the card */
            object-fit: cover; /* Ensures the image covers the area without distortion */
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #34495e;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1.2rem; /* Increased font size */
            line-height: 1.8; /* Increased line height for better readability */
            color: #555;
            width: 100%; /* Take full width */
            padding: 10px 0; /* Add padding for spacing */
        }

        .text-center {
            font-size: 1.2rem;
            color: #777;
        }

        .row {
            margin: 0 -15px;
        }

        .col-md-12 {
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="content-container">
        <h1>Topic: @ViewBag.CategoryName</h1>
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-md-12 mb-4">
                        <!-- Full width column -->
                        <div class="card">
                            <img src="@item.ImagePath" class="card-img-top" alt="@item.Title">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <!-- Displaying the tags with '#' -->
                                <div class="tags">
                                    @foreach (var tag in item.Tags.Split(','))
                                    {
                                        <span class="badge bg-primary">#@tag.Trim()</span>
                                    }
                                </div>
                                <!-- Feedback Button -->
                                <div class="mt-3">
                                    <a href="@Url.Action("GiveFeedback", "Feedback", new { contentId = item.Id })" class="btn btn-info">Give Feedback</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">No content available for this category.</p>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>