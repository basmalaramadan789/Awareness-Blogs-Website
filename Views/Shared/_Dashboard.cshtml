<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Roboto', sans-serif;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            background: linear-gradient(135deg, #1d1f21, #343a40);
            color: #fff;
            display: flex;
            flex-direction: column;
            padding-top: 1rem;
        }

            .sidebar h3 {
                text-align: center;
                font-weight: bold;
                color: #f8f9fa;
            }

            .sidebar .nav-link {
                color: #adb5bd;
                padding: 0.8rem 1.5rem;
                margin: 0.2rem 0;
                border-radius: 4px;
                display: flex;
                align-items: center;
                transition: all 0.3s;
            }

                .sidebar .nav-link i {
                    margin-right: 1rem;
                    font-size: 1.2rem;
                }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: #fff;
                }

                .sidebar .nav-link.active {
                    background-color: #6c757d;
                    color: #fff;
                }

        .sidebar-footer {
            margin-top: auto;
            padding: 1rem;
            background-color: #212529;
            text-align: center;
            color: #adb5bd;
            font-size: 0.9rem;
        }

        .navbar {
            background-color: #1d1f21;
            border-bottom: 3px solid #6c757d;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            color: #f8f9fa;
            font-size: 1.5rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .navbar .navbar-search {
            display: flex;
            align-items: center;
            background-color: #343a40;
            border-radius: 4px;
            padding: 0.3rem 0.8rem;
        }

            .navbar .navbar-search input {
                border: none;
                background: none;
                color: #fff;
                outline: none;
                width: 200px;
            }

                .navbar .navbar-search input::placeholder {
                    color: #adb5bd;
                }

            .navbar .navbar-search i {
                color: #adb5bd;
            }

        .navbar .user-menu {
            display: flex;
            align-items: center;
        }

            .navbar .user-menu img {
                width: 35px;
                height: 35px;
                border-radius: 50%;
                margin-right: 0.5rem;
            }

            .navbar .user-menu span {
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h3>Dashboard</h3>
            <nav class="nav flex-column">
                <a href="#" class="nav-link active"><i class="fas fa-home"></i>Home</a>
                <a href="/Content/Create" class="nav-link"><i class="fas fa-user"></i>Content</a>
                <a href="/Category/GetAll" class="nav-link"><i class="fas fa-cog"></i>Categories</a>
                <a href="/FeedBack/GetAllFeedbacks" class="nav-link"><i class="fas fa-chart-line"></i>FeedBacks</a>
                @* <a href="#" class="nav-link"><i class="fas fa-sign-out-alt"></i>Logout</a> *@
            </nav>
            <div class="sidebar-footer">
                &copy; 2024 Your Website
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <nav class="navbar">
                <a class="navbar-brand" href="#">Personalized Awareness</a>
                <div class="navbar-search">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search...">
                </div>
                <div class="user-menu">
                    <img src="https://via.placeholder.com/35" alt="User Profile">
                    <span>John Doe</span>
                </div>
            </nav>
           
            <div class="content m-3">
                <!-- Existing content goes here -->
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
